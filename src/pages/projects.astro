// Separar proyectos por tipo de código
const openSourceProjects = projects.filter(p => p.github !== null);
const privateProjects = projects.filter(p => p.github === null);
const featuredProjects = projects.filter(p => p.highlight);

// Estadísticas de proyectos
const projectStats = {
  total: projects.length,
  openSource: openSourceProjects.length,
  private: privateProjects.length,
  completed: projects.filter(p => p.status === 'Completado').length,
  inProduction: projects.filter(p => p.status === 'En producción').length,
  technologies: [...new Set(projects.flatMap(p => p.technologies))].length
};
---

<MainLayout {...seoData} breadcrumbs={breadcrumbs}>
  <!-- Hero Section -->
  <section class="min-h-[50vh] sm:min-h-[55vh] md:min-h-[60vh] flex items-center justify-center px-4 pt-4 sm:pt-8 md:pt-16">
    <div class="max-w-4xl mx-auto text-center">
      <div class="fade-in-up">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-bold mb-4 sm:mb-6 leading-tight">
          <span class="gradientStart">Proyectos</span>
        </h1>
        <h2 class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-300 mb-6 sm:mb-8 font-light px-2">
          Soluciones <span class="gradientHighlight font-medium">Reales</span> para Problemas Reales
        </h2>
      </div>
      
      <div class="fade-in-up animate-delay-200">
        <p class="text-sm sm:text-base md:text-lg lg:text-xl text-gray-400 mb-8 sm:mb-12 max-w-2xl mx-auto leading-relaxed px-2 sm:px-4">
          Desde e-commerce hasta sistemas IoT, cada proyecto refleja mi compromiso con la 
          <span class="text-white font-medium">excelencia técnica</span> y el 
          <span class="text-white font-medium">impacto en el negocio</span>.
        </p>
      </div>
      
      <div class="fade-in-up animate-delay-400">
        <Button variant="outline" size="lg" href="/">
          ← Volver al Inicio
        </Button>
      </div>
    </div>
  </section>

  <!-- Estadísticas de Proyectos -->
  <Section spacing="lg">
    <div class="fade-in-up grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 sm:gap-4 lg:gap-6 text-center px-2">
      <div>
        <div class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold gradientStart mb-1 sm:mb-2">{projectStats.total}+</div>
        <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider">Proyectos</div>
      </div>
      <div>
        <div class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold text-green-400 mb-1 sm:mb-2">{projectStats.openSource}</div>
        <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider">Open Source</div>
      </div>
      <div>
        <div class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold text-blue-400 mb-1 sm:mb-2">{projectStats.private}</div>
        <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider">Privados</div>
      </div>
      <div>
        <div class="text-xl sm:text-2xl md:text-3xl font-bold gradientStart mb-1 sm:mb-2">{projectStats.completed}</div>
        <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider">Completados</div>
      </div>
      <div class="col-span-2 sm:col-span-1">
        <div class="text-xl sm:text-2xl md:text-3xl font-bold gradientStart mb-1 sm:mb-2">{projectStats.technologies}+</div>
        <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider">Tecnologías</div>
      </div>
    </div>
  </Section>

  <!-- Proyectos Destacados -->
  <Section title="Proyectos Destacados" subtitle="Lo Mejor" spacing="xl">
    <div class="grid gap-12 max-w-5xl mx-auto">
      {featuredProjects.map((project, index) => (
        <article class={`fade-in-up animate-delay-${(index + 1) * 200}`}>
          <Card variant="featured" padding="lg" class="transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
            <div class="grid md:grid-cols-2 gap-6 lg:gap-8 items-center">
              <!-- Imagen del proyecto -->
              <div class="order-2 md:order-1">
                <div class="relative group">
                  {project.image ? (
                    <img 
                      src={project.image} 
                      alt={`Preview de ${project.title}`}
                      class="w-full h-48 sm:h-56 md:h-64 object-cover rounded-lg border border-slate-700 transition-transform duration-300 group-hover:scale-105"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-full h-48 sm:h-56 md:h-64 bg-gradient-to-br from-slate-800 to-slate-900 rounded-lg border border-slate-700 flex items-center justify-center">
                      <div class="text-center px-4">
                        <svg class="w-12 h-12 sm:w-16 sm:h-16 text-slate-500 mx-auto mb-2 sm:mb-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                        </svg>
                        <p class="text-slate-400 text-xs sm:text-sm">{project.title}</p>
                        <p class="text-slate-500 text-xs mt-1">Vista previa próximamente</p>
                      </div>
                    </div>
                  )}
                  
                  <!-- Badge de categoría -->
                  <div class="absolute top-3 sm:top-4 left-3 sm:left-4">
                    <span class="px-2 sm:px-3 py-1 text-xs font-medium bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full">
                      {project.category}
                    </span>
                  </div>
                  
                  <!-- Badge de estado -->
                  <div class="absolute top-3 sm:top-4 right-3 sm:right-4">
                    <span class={`px-2 sm:px-3 py-1 text-xs font-medium rounded-full ${
                      project.status === 'Completado' ? 'bg-green-600/20 text-green-400 border border-green-600/30' :
                      project.status === 'En producción' ? 'bg-blue-600/20 text-blue-400 border border-blue-600/30' :
                      'bg-yellow-600/20 text-yellow-400 border border-yellow-600/30'
                    }`}>
                      {project.status}
                    </span>
                  </div>
                </div>
              </div>
              
              <!-- Información del proyecto -->
              <div class="order-1 md:order-2">
                <h3 class="text-xl sm:text-2xl md:text-3xl font-bold mb-3 sm:mb-4">
                  <span class="gradientStart">{project.title}</span>
                </h3>
                
                <p class="text-gray-300 mb-4 sm:mb-6 leading-relaxed text-sm sm:text-base">
                  {project.description}
                </p>
                
                <!-- Características principales -->
                <div class="mb-4 sm:mb-6">
                  <h4 class="text-white font-medium mb-2 sm:mb-3 text-sm sm:text-base">Características principales:</h4>
                  <ul class="space-y-1 sm:space-y-2">
                    {project.features.slice(0, 3).map(feature => (
                      <li class="flex items-start gap-2 text-xs sm:text-sm text-gray-300">
                        <svg class="w-3 h-3 sm:w-4 sm:h-4 text-green-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <!-- Stack tecnológico -->
                <div class="mb-4 sm:mb-6">
                  <h4 class="text-white font-medium mb-2 sm:mb-3 text-sm sm:text-base">Stack tecnológico:</h4>
                  <div class="flex flex-wrap gap-1 sm:gap-2">
                    {project.technologies.map(tech => (
                      <span class="px-2 py-1 text-xs font-medium bg-slate-800 text-slate-300 rounded border border-slate-700">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
                
                <!-- Metadatos -->
                <div class="flex flex-wrap items-center gap-3 sm:gap-4 text-xs sm:text-sm text-gray-400 mb-4 sm:mb-6">
                  <div class="flex items-center gap-1 sm:gap-2">
                    <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    {project.year} • {project.duration}
                  </div>
                  <div class="flex items-center gap-1 sm:gap-2">
                    <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm0 2v8h12V6H4z" clip-rule="evenodd"></path>
                    </svg>
                    {project.client}
                  </div>
                </div>
                
                <!-- Enlaces -->
                <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
                  {project.demo && (
                    <Button variant="primary" size="sm" href={project.demo}>
                      Ver Demo →
                    </Button>
                  )}
                  {project.github && (
                    <Button variant="outline" size="sm" href={project.github}>
                      Ver Código
                    </Button>
                  )}
                  {!project.demo && !project.github && (
                    <Button variant="secondary" size="sm" href="mailto:maykol@maykolsalgado.me">
                      Más Información
                    </Button>
                  )}
                </div>
              </div>
            </div>
          </Card>
        </article>
      ))}
    </div>
  </Section>

  <!-- Proyectos Open Source -->
  <Section title="Proyectos Open Source" subtitle="Código Abierto" spacing="xl">
    <div class="fade-in-up mb-8 text-center max-w-3xl mx-auto">
      <p class="text-lg text-gray-300 leading-relaxed">
        Estos proyectos están disponibles en <span class="text-white font-medium">GitHub</span> para que puedas 
        explorar el código, contribuir o usarlos como referencia. Creo en el poder del código abierto 
        para impulsar la innovación y el aprendizaje colaborativo.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {openSourceProjects.map((project, index) => (
        <article class={`fade-in-up animate-delay-${(index + 1) * 200}`}>
          <Card variant="default" padding="lg" class="h-full flex flex-col transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
            <!-- Imagen del proyecto -->
            <div class="relative mb-6">
              {project.image ? (
                <img 
                  src={project.image} 
                  alt={`Preview de ${project.title}`}
                  class="w-full h-48 object-cover rounded-lg border border-slate-700 transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-48 bg-gradient-to-br from-slate-800 to-slate-900 rounded-lg border border-slate-700 flex items-center justify-center">
                  <div class="text-center">
                    <svg class="w-12 h-12 text-slate-500 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                    </svg>
                    <p class="text-slate-400 text-xs">{project.title}</p>
                  </div>
                </div>
              )}
              
              <!-- Badge de Open Source -->
              <div class="absolute top-3 left-3">
                <span class="px-2 py-1 text-xs font-medium bg-green-600/20 text-green-400 rounded border border-green-600/30 flex items-center gap-1">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  Open Source
                </span>
              </div>
              
              <!-- Badge de estado -->
              <div class="absolute top-3 right-3">
                <span class={`px-2 py-1 text-xs font-medium rounded ${
                  project.status === 'Completado' ? 'bg-green-600/20 text-green-400' :
                  project.status === 'En producción' ? 'bg-blue-600/20 text-blue-400' :
                  'bg-yellow-600/20 text-yellow-400'
                }`}>
                  {project.status}
                </span>
              </div>
            </div>
            
            <!-- Contenido -->
            <div class="flex-1 flex flex-col">
              <h3 class="text-xl font-bold mb-3">
                <span class="gradientStart">{project.title}</span>
              </h3>
              
              <p class="text-gray-300 text-sm mb-4 leading-relaxed flex-1">
                {project.description}
              </p>
              
              <!-- Stack tecnológico -->
              <div class="mb-4">
                <div class="flex flex-wrap gap-1">
                  {project.technologies.slice(0, 4).map(tech => (
                    <span class="px-2 py-1 text-xs bg-slate-800 text-slate-300 rounded">
                      {tech}
                    </span>
                  ))}
                  {project.technologies.length > 4 && (
                    <span class="px-2 py-1 text-xs bg-slate-700 text-slate-400 rounded">
                      +{project.technologies.length - 4}
                    </span>
                  )}
                </div>
              </div>
              
              <!-- Metadatos -->
              <div class="flex items-center justify-between text-xs text-gray-400 mb-4">
                <span>{project.year}</span>
                <span>{project.duration}</span>
                <span class="px-2 py-1 bg-slate-800 rounded">{project.category}</span>
              </div>
              
              <!-- Enlaces - Priorizando GitHub -->
              <div class="flex gap-2">
